{
  "compilerOptions": {
    "outDir": "./build",
    "lib": [ "es5", "es6" ],
    "module": "commonjs",
    "target": "es6",
    "sourceMap": true,
    "skipLibCheck": true,
    "esModuleInterop": true
  },
  "include": [
    "src/*.ts"
  ],
  "exclude": [
    "node_modules",
    "../../node_modules",
    "node_modules/*",
    "src/test/**/*.test.ts"
  ]
}
