{
  "compilerOptions": {
    "outDir": "./build",
    "lib": [ "es5", "es6" ],
    "module": "commonjs",
    "target": "es2017",
    "sourceMap": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true
  },
  "include": [
    "src/*.ts",
    "src/migrations/*.ts"
  ],
  "exclude": [
    "node_modules",
    "../../node_modules",
    "node_modules/*",
    "src/test/**/*.test.ts"
  ]
}
